<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="https://jakarta.ee/xml/ns/jakartaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee
         https://jakarta.ee/xml/ns/jakartaee/web-app_5_0.xsd"
         version="5.0">
  <display-name>Expense Tracker</display-name>

  <context-param>
    <param-name>jakarta.servlet.jsp.jstl.tld.scan</param-name>
    <param-value>true</param-value>
  </context-param>

  <!-- Session Configuration - ADD THIS HERE -->
  <session-config>
    <session-timeout>30</session-timeout> <!-- 30 minutes of inactivity -->
    <cookie-config>
      <http-only>true</http-only> <!-- Prevents XSS attacks -->
      <secure>false</secure> <!-- Set to true when using HTTPS in production -->
    </cookie-config>
    <tracking-mode>COOKIE</tracking-mode>
  </session-config>

  <!-- Filter Definitions - ADD THIS HERE -->
  <filter>
    <filter-name>NoCacheFilter</filter-name>
    <filter-class>com.expensetracker.filter.NoCacheFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>NoCacheFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>

  <filter>
    <filter-name>AuthenticationFilter</filter-name>
    <filter-class>com.expensetracker.filter.AuthenticationFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>AuthenticationFilter</filter-name>
    <url-pattern>/dashboard</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>AuthenticationFilter</filter-name>
    <url-pattern>/expenses</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>AuthenticationFilter</filter-name>
    <url-pattern>/expense/*</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>AuthenticationFilter</filter-name>
    <url-pattern>/manage-categories</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>AuthenticationFilter</filter-name>
    <url-pattern>/category</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>AuthenticationFilter</filter-name>
    <url-pattern>/budgets</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>AuthenticationFilter</filter-name>
    <url-pattern>/WEB-INF/views/*</url-pattern>
  </filter-mapping>

  <filter>
    <filter-name>VerificationFilter</filter-name>
    <filter-class>com.expensetracker.filter.VerificationFilter</filter-class>
  </filter>

  <filter-mapping>
    <filter-name>VerificationFilter</filter-name>
    <url-pattern>/expenses/export</url-pattern>
  </filter-mapping>

  <filter-mapping>
    <filter-name>VerificationFilter</filter-name>
    <url-pattern>/budgets/*</url-pattern>
  </filter-mapping>

  <filter-mapping>
    <filter-name>VerificationFilter</filter-name>
    <url-pattern>/reports/*</url-pattern>
  </filter-mapping>

  <jsp-config>
    <taglib>
      <taglib-uri>jakarta.tags.core</taglib-uri>
      <taglib-location>/WEB-INF/lib/jakarta.servlet.jsp.jstl-2.0.0.jar</taglib-location>
    </taglib>
  </jsp-config>

  <servlet>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>com.expensetracker.controller.LoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>RegisterServlet</servlet-name>
    <servlet-class>com.expensetracker.controller.RegisterServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>RegisterServlet</servlet-name>
    <url-pattern>/register</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>VerifyEmailServlet</servlet-name>
    <servlet-class>com.expensetracker.controller.VerifyEmailServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>VerifyEmailServlet</servlet-name>
    <url-pattern>/verify-email</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>ResendVerificationServlet</servlet-name>
    <servlet-class>com.expensetracker.controller.ResendVerificationServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ResendVerificationServlet</servlet-name>
    <url-pattern>/resend-verification</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>ForgotPasswordServlet</servlet-name>
    <servlet-class>com.expensetracker.controller.ForgotPasswordServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ForgotPasswordServlet</servlet-name>
    <url-pattern>/forgot-password</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>ResetPasswordServlet</servlet-name>
    <servlet-class>com.expensetracker.controller.ResetPasswordServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ResetPasswordServlet</servlet-name>
    <url-pattern>/reset-password</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>DashboardServlet</servlet-name>
    <servlet-class>com.expensetracker.controller.DashboardServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>DashboardServlet</servlet-name>
    <url-pattern>/dashboard</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>AddExpenseServlet</servlet-name>
    <servlet-class>com.expensetracker.controller.AddExpenseServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AddExpenseServlet</servlet-name>
    <url-pattern>/expense/add</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>EditExpenseServlet</servlet-name>
    <servlet-class>com.expensetracker.controller.EditExpenseServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>EditExpenseServlet</servlet-name>
    <url-pattern>/expense/edit</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>ListExpensesServlet</servlet-name>
    <servlet-class>com.expensetracker.controller.ListExpensesServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ListExpensesServlet</servlet-name>
    <url-pattern>/expenses</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>DeleteExpenseServlet</servlet-name>
    <servlet-class>com.expensetracker.controller.DeleteExpenseServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>DeleteExpenseServlet</servlet-name>
    <url-pattern>/expense/delete</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>ExportServlet</servlet-name>
    <servlet-class>com.expensetracker.controller.ExportServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>ExportServlet</servlet-name>
    <url-pattern>/expenses/export</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>CategoryServlet</servlet-name>
    <servlet-class>com.expensetracker.controller.CategoryServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>CategoryServlet</servlet-name>
    <url-pattern>/category</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>ManageCategoriesServlet</servlet-name>
    <servlet-class>com.expensetracker.controller.ManageCategoriesServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ManageCategoriesServlet</servlet-name>
    <url-pattern>/manage-categories</url-pattern>
  </servlet-mapping>

  <servlet>
        <servlet-name>ReportServlet</servlet-name>
        <servlet-class>com.expensetracker.controller.ReportServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ReportServlet</servlet-name>
        <url-pattern>/reports</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>HeatmapServlet</servlet-name>
        <servlet-class>com.expensetracker.controller.HeatmapServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HeatmapServlet</servlet-name>
        <url-pattern>/reports/heatmap</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>TrendServlet</servlet-name>
        <servlet-class>com.expensetracker.controller.TrendServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TrendServlet</servlet-name>
        <url-pattern>/reports/trends</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CategoryReportServlet</servlet-name>
        <servlet-class>com.expensetracker.controller.CategoryReportServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CategoryReportServlet</servlet-name>
        <url-pattern>/reports/categories</url-pattern>
    </servlet-mapping>

  <!-- Profile Management -->
  <servlet>
      <servlet-name>ProfileServlet</servlet-name>
      <servlet-class>com.expensetracker.controller.ProfileServlet</servlet-class>
  </servlet>
  <servlet-mapping>
      <servlet-name>ProfileServlet</servlet-name>
      <url-pattern>/profile</url-pattern>
  </servlet-mapping>
<servlet>
<servlet-name>BudgetServlet</servlet-name>
  <servlet-class>com.expensetracker.controller.BudgetServlet</servlet-class>
</servlet>

<servlet-mapping>
  <servlet-name>BudgetServlet</servlet-name>
  <url-pattern>/budgets</url-pattern>
</servlet-mapping>  

  <servlet>
    <servlet-name>LogoutServlet</servlet-name>
    <servlet-class>com.expensetracker.controller.LogoutServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LogoutServlet</servlet-name>
    <url-pattern>/logout</url-pattern>
  </servlet-mapping>

  <welcome-file-list>
    <welcome-file>login</welcome-file>
  </welcome-file-list>

  <security-constraint>
    <web-resource-collection>
        <web-resource-name>No Direct JSP Access</web-resource-name>
        <url-pattern>*.jsp</url-pattern>
    </web-resource-collection>
    <auth-constraint>
        <!-- Empty = no one can access -->
    </auth-constraint>
  </security-constraint>
</web-app>